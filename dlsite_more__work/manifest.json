{
  "manifest_version": 3,
  "name": "より多くの作品を一度に見ることができる拡張機能",
  "short_name": "DLMoreWorks",
  "version": "1.0.0.0",
  "description": "ボタンを押すことでランキングに飛ぶことができます",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://www.dlsite.com/home/*",
        "https://www.dlsite.com/maniax/*",
        "https://www.dlsite.com/pro/campaign/*"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://www.dlsite.com/home/*",
    "https://www.dlsite.com/maniax/*",
    "https://www.dlsite.com/pro/campaign/*"
  ]
}
